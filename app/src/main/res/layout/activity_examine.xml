<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.drummond.voteapp.ExamineActivity">

    <TextView
        android:id="@+id/tv_votenum_examine"
        android:padding="10dp"
        android:paddingRight="0dp"
        android:text="投票码:"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_votenum_examine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="请输入投票码"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_votenum_examine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_ok_examine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:padding="20dp"
        android:textSize="30dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/et_votenum_examine"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
